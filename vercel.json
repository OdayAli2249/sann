{
    "rewrites": [
        {
            "source": "/auth",
            "destination": "/index.html"
        },
        {
            "source": "/home",
            "destination": "/index.html"
        },
        {
            "source": "/verify-email/:token",
            "destination": "/index.html"
        },
        {
            "source": "/password/reset/:token",
            "destination": "/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}